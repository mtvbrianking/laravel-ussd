{
  "name": "bmatovu/laravel-ussd",
  "description": "Laravel USSD Builder",
  "homepage": "https://github.com/mtvbrianking/laravel-ussd",
  "type": "library",
  "license": "MIT",
  "keywords": [
    "laravel",
    "lumen",
    "package",
    "xml",
    "ussd",
    "menu",
    "builder"
  ],
  "authors": [
    {
      "name": "Brian Matovu",
      "email": "mtvbrianking@gmail.com",
      "homepage": "http://bmatovu.com",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^7.2.5|^8.0",
    "illuminate/container": "^6.0|^7.0|^8.0|^9.0",
    "illuminate/contracts": "^6.0|^7.0|^8.0|^9.0",
    "illuminate/support": "^6.0|^7.0|^8.0|^9.0"
  },
  "require-dev": {
    "code-lts/doctum": "^5.5",
    "friendsofphp/php-cs-fixer": "^3.0",
    "guzzlehttp/guzzle": "^6.3|^7.0",
    "orchestra/testbench": "^3.0|^4.0|^5.0|^6.0",
    "phpunit/phpunit": "^8.0|^9.0",
    "symfony/console": "^4.3.4|^5.0|^6.0"
  },
  "bin": [
    "bin/ussd"
  ],
  "autoload": {
    "files": [
      "src/Support/helpers.php"
    ],
    "psr-4": {
      "Bmatovu\\Ussd\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Bmatovu\\Ussd\\Tests\\": "tests/"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "cs-fix": "php-cs-fixer fix",
    "cs-lint": "php-cs-fixer fix --dry-run",
    "doc": "doctum.php update doctum.php",
    "test": "phpunit",
    "test-coverage": "phpunit --coverage-html coverage"
  },
  "config": {
    "sort-packages": true
  },
  "extra": {
    "laravel": {
      "providers": [
        "Bmatovu\\Ussd\\UssdServiceProvider"
      ]
    }
  }
}
